    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.4.0",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0",
